<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_import_partscan_wizard_form" model="ir.ui.view">
        <field name="name">import.partscan.wizard.form</field>
        <field name="model">import.partscan.wizard</field>
        <field name="arch" type="xml">
            <form string="Import Part Scan">
                <group>
                    <field name="folder_path" placeholder="Ví dụ: C:\Photo Model List"/>
                    <field name="import_type"/>
                </group>
                <footer>
                    <button string="Import" name="action_import_partscan" type="object" class="btn-primary"/>
                    <button string="Hủy" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>